<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="14dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"> <!-- Remove padding to eliminate white margin -->

        <!-- Left Image View with Rounded Top Corners -->
        <ImageView
            android:id="@+id/leftImageView"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="2dp"
            android:layout_toStartOf="@+id/smallImagesLayout"
            android:contentDescription="Large Image"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_top_left_corner" /> <!-- Rounded top corners -->

        <!-- Linear Layout for Two Smaller Images on the Right -->
        <LinearLayout
            android:id="@+id/smallImagesLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">

            <!-- Top Right Image View with Rounded Corners -->
            <ImageView
                android:id="@+id/rightTopImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="0dp"
                android:scaleType="centerCrop"
                android:contentDescription="Small Image 1"
                android:background="@drawable/rounded_top_right_corner" /> <!-- Rounded top and bottom right corners -->

            <!-- Bottom Right Image View with No Corners -->
            <ImageView
                android:id="@+id/rightBottomImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="0dp"
                android:layout_marginTop="2dp"
                android:scaleType="centerCrop"
                android:contentDescription="Small Image 2" />
        </LinearLayout>

        <!-- Title of the Object -->
        <TextView
            android:id="@+id/overviewObjectTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/leftImageView"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="Object Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <!-- Plus Button -->
        <ImageButton
            android:id="@+id/overviewExpandButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/leftImageView"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_add"
            android:contentDescription="Add Button" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
